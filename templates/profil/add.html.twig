{% extends 'base.html.twig' %}

{% block body %}
{% include '_compenents/header.html.twig' %}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Ajouter une recette</h2>

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                    {% for champ in form %}
                    {% if champ.vars.name not in ['_token'] %}
                    <div class="mb-3">
                        {{ form_label(champ, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(champ, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(champ) }}
                    </div>
                    {% endif %}
                    {% endfor %}

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary px-4">Soumettre</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}